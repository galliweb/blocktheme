{
  "$schema": "https://schemas.wp.org/wp/6.9/theme.json",
  "version": 3,
  "title": "Fancy",
  "settings": {
    "color": {
      "palette": [
        {
          "color": "#1a1a1a",
          "name": "Schwarz",
          "slug": "schwarz"
        },
        {
          "color": "#ff6b6b",
          "name": "Coral",
          "slug": "coral"
        },
        {
          "color": "#ffffff",
          "name": "Weiss",
          "slug": "weiss"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--weiss)",
      "text": "var(--wp--preset--color--schwarz)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "fontSize": "1.125rem",
      "lineHeight": "1.6"
    },
    "spacing": {
      "padding": {
        "top": "var(--wp--preset--spacing--lg)",
        "bottom": "var(--wp--preset--spacing--lg)"
      }
    },
    "elements": {
      "heading": {
        "color": {
          "text": "var(--wp--preset--color--coral)"
        },
        "typography": {
          "fontWeight": "900",
          "lineHeight": "1.2"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--coral)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--schwarz)"
          }
        }
      }
    }
  }
}